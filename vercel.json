{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev:full",
  "env": {
    "VITE_DB_NAME": "sunflix"
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 512,
      "maxDuration": 60
    }
  }
}
